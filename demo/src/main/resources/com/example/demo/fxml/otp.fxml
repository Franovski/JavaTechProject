<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.OtpController"
            prefWidth="900" prefHeight="560">
    <children>
        <StackPane styleClass="auth-surface" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox spacing="25" alignment="CENTER">
                <Label text="ðŸ” Two-Step Verification" styleClass="auth-title"/>
                <Label text="Enter the code sent to your email" styleClass="auth-subtitle"/>
                <VBox spacing="15" maxWidth="400" styleClass="auth-card">
                    <TextField fx:id="code" promptText="6-digit code" styleClass="auth-field"/>
                    <Button text="Verify" onAction="#onVerify" styleClass="auth-btn"/>
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Didn't get the code?" styleClass="auth-subtext"/>
                        <Hyperlink text="Resend" onAction="#onResend" styleClass="auth-link"/>
                    </HBox>
                    <Button text="Back to Login" onAction="#goLogin" styleClass="auth-btn-ghost"/>
                </VBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>

