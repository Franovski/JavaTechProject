<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controllers.ForgotController"
            prefWidth="900" prefHeight="560">
    <children>
        <StackPane styleClass="auth-surface" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox spacing="25" alignment="CENTER">
                <Label text="ðŸ”’ Forgot Password?" styleClass="auth-title"/>
                <Label text="Enter your email to receive a reset code" styleClass="auth-subtitle"/>
                <VBox spacing="15" maxWidth="400" styleClass="auth-card">
                    <TextField fx:id="emailOrUsername" promptText="your@email.com" styleClass="auth-field"/>
                    <Button text="Send Reset Code" onAction="#onSend" styleClass="auth-btn"/>
                    <Button text="Back to Login" onAction="#goLogin" styleClass="auth-btn-ghost"/>
                </VBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>

